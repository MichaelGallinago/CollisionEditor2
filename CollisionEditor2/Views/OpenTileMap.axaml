<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CollisionEditor2.Views"
        mc:Ignorable="d" d:DesignWidth="700" d:DesignHeight="400"
        x:Class="CollisionEditor2.Views.OpenTileMap"
        Title="OpenTileMap"
        FontFamily="Consolas"
        Icon="/Assets/avalonia-logo.ico">
	<Window.Styles>
		<Style Selector="DataValidationErrors">
			<Setter Property="Template" Value="{DynamicResource TooltipDataValidationContentTemplate}" />
			<Setter Property="ErrorTemplate" Value="{DynamicResource TooltipDataValidationErrorTemplate}" />
		</Style>
	</Window.Styles>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="15*"/>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="30*"/>
            <RowDefinition Height="25*"/>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="30*"/>
            <RowDefinition Height="25*"/>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="30*"/>
            <RowDefinition Height="55*"/>
            <RowDefinition Height="5*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="25*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="25*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="20*"/>
            <ColumnDefinition Width="20*"/>
            <ColumnDefinition Width="20*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Column="1" Grid.Row="2" Text="Tile Height:" FontSize="12"/>
        <TextBox Grid.Column="1" Grid.Row="3" />
        <TextBlock Grid.Column="3" Grid.Row="2" Text="Tile Width:" FontSize="12"/>
        <TextBox Grid.Column="3" Grid.Row="3" />

        <TextBlock Grid.Column="1" Grid.Row="5" Text="Vertical Separation:" FontSize="12"/>
        <TextBox Grid.Column="1" Grid.Row="6" />
        <TextBlock Grid.Column="3" Grid.Row="5" Text="Horizontal Separation:" FontSize="12"/>
        <TextBox Grid.Column="3" Grid.Row="6" />

        <TextBlock Grid.Column="1" Grid.Row="8" Text="Vertical Offset:" FontSize="12"/>
        <TextBox Grid.Column="1" Grid.Row="9" />
        <TextBlock Grid.Column="3" Grid.Row="8" Text="Horizontal Offset:" FontSize="12"/>
        <TextBox Grid.Column="3" Grid.Row="9" />
        
        <ScrollViewer Grid.Column="5" Grid.Row="5"/>
                    
    </Grid>
</Window>
